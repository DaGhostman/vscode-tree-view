{
    "name": "vs-treeview",
    "displayName": "File Tree View",
    "description": "Tree View extension providing an overview of the main file symbols",
    "version": "0.1.0",
    "author": {
        "name": "Dimitar Dimitrov",
        "email": "daghostman.dd@gmail.com"
    },
    "license": "MIT",
    "publisher": "DaGhostman",
    "repository": {
        "type": "git",
        "url": "https://github.com/DaGhostman/vscode-tree-view.git"
    },
    "bugs": {
        "url": "https://github.com/DaGhostman/vscode-tree-view/issues"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:php",
        "onLanguage:json",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "tree-outline",
                    "name": "Tree"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tslint -p ./ && tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "tslint": "^5.8.0"
    },
    "dependencies": {
        "php-parser": "^2.1.0",
        "typescript-parser": "^2.2.0",
        "jsonc-parser": "^1.0.0"
    }
}
